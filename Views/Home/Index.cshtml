@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/image.jpg" alt="ASP.NET" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/image3.jpg" alt="Visual Studio" class="img-responsive" />
            
        </div>
        <div class="item">
            <img src="~/images/image4.jpg" alt="Microsoft Azure" class="img-responsive" />
           
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Sigurnost</h2>
        <ul>
            <li>Nema lažnih oglasa.</li>
            <li>Sigurno plaćanje putem naše aplikacije.</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Dostupnost</h2>
        <ul>
            <li>Svi auti na prodaju na jednom mjestu.</li>
            <li>Pokažite svoj auto cijelom svijetu.</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Zabavno</h2>
        <ul>
            <li>Samo za prave ljubitelje automobila!</li>
        </ul>
    </div>
</div>
